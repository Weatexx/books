    <script>
        // Tema ikonunu güncelle
        function updateThemeIcon() {
            const theme = document.documentElement.getAttribute('data-theme');
            const icon = document.getElementById('theme-icon');
            icon.className = theme === 'light' ? 'fas fa-moon' : 'fas fa-sun';
        }

        document.addEventListener('DOMContentLoaded', updateThemeIcon);
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                if (mutation.attributeName === 'data-theme') {
                    updateThemeIcon();
                }
            });
        });
        observer.observe(document.documentElement, { attributes: true });
    </script>

    <script>
        function mesajlariYukle() {
            $.get('/Admin/MesajlariGoruntule', function(data) {
                $('#mesajlarContainer').html(data);
                if (data.trim() === '') {
                    $('#mesajlarContainer').html('<span class="dropdown-item">Mesaj bulunmamaktadır.</span>');
                }
            });
        }

        function okunmamisMesajSayisiniGuncelle() {
            $.get('/Admin/OkunmamisMesajSayisi', function(data) {
                var sayi = data.count;
                $('#okunmamisMesajSayisi').text(sayi);
                $('.nav-sidebar #okunmamisMesajSayisi').text(sayi);
                if (sayi === 0) {
                    $('#okunmamisMesajSayisi').hide();
                    $('.nav-sidebar #okunmamisMesajSayisi').hide();
                } else {
                    $('#okunmamisMesajSayisi').show();
                    $('.nav-sidebar #okunmamisMesajSayisi').show();
                }
            });
        }

        function mesajOkundu(id, element) {
            $.post('/Admin/MesajOkunduOlarakIsaretle', { id: id }, function(data) {
                if (data.success) {
                    $(element).removeClass('bg-light');
                    $(element).find('.text-warning').remove();
                    okunmamisMesajSayisiniGuncelle();
                }
            });
        }

        $(document).ready(function() {
            okunmamisMesajSayisiniGuncelle();
            
            $('#mesajlarDropdown').click(function(e) {
                e.preventDefault();
                mesajlariYukle();
            });
        });
    </script>

