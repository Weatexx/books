            background-color: var(--bg-color) !important;
        }

        .card {
            background-color: var(--card-bg);
            border-color: var(--card-border);
        }

        .card-header {
            background-color: var(--card-bg);
            border-bottom: 1px solid var(--card-border);
        }

        .table {
            color: var(--text-color);
        }

        .table td, .table th {
            border-color: var(--card-border);
        }

        /* Tema değiştirme butonu */
        .theme-toggle {
            background: none;
            border: none;
            padding: 0.5rem;
            cursor: pointer;
            color: var(--navbar-color);
