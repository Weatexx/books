<!DOCTYPE html>
<html lang="tr" data-theme="light">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="Kitap Blog - Kitapseverlerin buluşma noktası">
    <meta name="theme-color" content="#2c3e50">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    
    <title>@ViewData["Title"] - Kitap Blog</title>
    
    <!-- Preload önemli kaynaklar -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" as="style">
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" as="style">
    
    <!-- CSS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <header class="no-print">
        @await Html.PartialAsync("_Navbar")
    </header>

    <!-- Header Banner -->
    <div class="header-bg no-print">
        <div class="container px-4 px-lg-5">
            <div class="text-center">
                <h1 class="fw-bolder mb-4">Kitapların dünyasına açılan pencere</h1>
                <p class="lead mb-4">Kitaplar hakkında her şey...</p>
                <!-- Arama formu -->
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6">
                        <form class="d-flex" action="/Home/Arama" method="get">
                            <div class="input-group">
                                <input class="form-control" type="search" name="q" 
                                       placeholder="Kitap adı veya yazar adı ara..." 
                                       aria-label="Ara">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                    <span class="d-none d-sm-inline ms-1">Ara</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ana İçerik -->
    <main class="flex-grow-1 py-4">
        <div class="container">
            <div class="row">
                <!-- Ana içerik -->
                <div class="col-12 col-lg-8 mb-4 mb-lg-0">
                    @RenderBody()
                </div>
                <!-- Yan panel -->
                <div class="col-12 col-lg-4">
                    <div class="sticky-top" style="top: 80px;">
                        @await Component.InvokeAsync("Turler")
                        @await Component.InvokeAsync("Yazarlar")
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-light py-5 mt-auto no-print">
        <div class="container">
            <div class="row gy-4">
                <!-- Logo ve Sosyal Medya -->
                <div class="col-12 col-lg-4">
                    <h5 class="text-uppercase mb-4">Kitap Dünyası</h5>
                    <p class="mb-4">Kitapseverlerin buluşma noktası. Binlerce kitap, yazar ve kullanıcı ile büyüyen topluluğumuzun parçası olun.</p>
                    <div class="social-links">
                        <a href="#" class="me-3 text-light" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-3 text-light" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-3 text-light" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <!-- Hızlı Erişim -->
                <div class="col-6 col-lg-2">
                    <h6 class="text-uppercase mb-4">Hızlı Erişim</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/" class="text-light text-decoration-none">Anasayfa</a></li>
                        <li class="mb-2"><a href="/Kitaplar" class="text-light text-decoration-none">Kitaplar</a></li>
                        <li class="mb-2"><a href="/Yazarlar" class="text-light text-decoration-none">Yazarlar</a></li>
                        <li class="mb-2"><a href="/Yayinevleri" class="text-light text-decoration-none">Yayınevleri</a></li>
                    </ul>
                </div>

                <!-- Kurumsal -->
                <div class="col-6 col-lg-2">
                    <h6 class="text-uppercase mb-4">Kurumsal</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/Hakkimizda" class="text-light text-decoration-none">Hakkımızda</a></li>
                        <li class="mb-2"><a href="/Iletisim" class="text-light text-decoration-none">İletişim</a></li>
                        <li class="mb-2"><a href="/Gizlilik" class="text-light text-decoration-none">Gizlilik Politikası</a></li>
                        <li class="mb-2"><a href="/Kullanim-Kosullari" class="text-light text-decoration-none">Kullanım Koşulları</a></li>
                    </ul>
                </div>

                <!-- Bülten -->
                <div class="col-12 col-lg-4">
                    <h6 class="text-uppercase mb-4">Bültenimize Abone Olun</h6>
                    <p class="mb-3">Yeni kitaplar ve etkinliklerden haberdar olmak için bültenimize abone olun.</p>
                    <form class="mb-3">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="E-posta adresiniz" 
                                   aria-label="E-posta adresiniz" required>
                            <button class="btn btn-primary" type="submit">Abone Ol</button>
                        </div>
                    </form>
                </div>
            </div>

            <hr class="my-4 bg-light opacity-25">

            <!-- Alt Footer -->
            <div class="row align-items-center">
                <div class="col-12 col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <p class="mb-0">&copy; @DateTime.Now.Year Kitap Dünyası. Tüm hakları saklıdır.</p>
                </div>
                <div class="col-12 col-md-6 text-center text-md-end">
                    <i class="fab fa-cc-visa fa-2x mx-1 text-light"></i>
                    <i class="fab fa-cc-mastercard fa-2x mx-1 text-light"></i>
                    <i class="fab fa-cc-paypal fa-2x mx-1 text-light"></i>
                    <i class="fab fa-cc-amex fa-2x mx-1 text-light"></i>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" defer></script>
    <script src="~/js/scripts.js" defer></script>
    <script src="~/js/theme.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" defer></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
