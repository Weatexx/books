<!DOCTYPE html>
<html lang="tr" data-theme="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Kitap Blog</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <style>
        /* Tema değişkenleri */
        :root[data-theme="light"] {
            --bg-color: #ffffff;
            --text-color: #212529;
            --navbar-bg: #f8f9fa;
            --navbar-color: #212529;
            --card-bg: #ffffff;
            --card-border: rgba(0,0,0,.125);
        }

        :root[data-theme="dark"] {
            --bg-color: #212529;
            --text-color: #f8f9fa;
            --navbar-bg: #343a40;
            --navbar-color: #f8f9fa;
            --card-bg: #343a40;
            --card-border: rgba(255,255,255,.125);
        }

        /* Genel stiller */
        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        .navbar {
            background-color: var(--navbar-bg) !important;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .navbar-brand, .nav-link {
            color: var(--navbar-color) !important;
        }

        .card {
            background-color: var(--card-bg);
            border-color: var(--card-border);
        }

        /* Modern navbar stilleri */
        .navbar {
            padding: 1rem 2rem;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .nav-link {
            font-size: 1.1rem;
            margin: 0 0.5rem;
            position: relative;
        }

        .nav-link:after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: 0;
            left: 0;
            background-color: var(--navbar-color);
            transition: width 0.3s ease;
        }

        .nav-link:hover:after {
            width: 100%;
        }

        /* Tema değiştirme butonu */
        .theme-toggle {
            background: none;
            border: none;
            padding: 0.5rem;
            cursor: pointer;
            color: var(--navbar-color);
            font-size: 1.2rem;
        }

        .theme-toggle:hover {
            opacity: 0.8;
        }
    </style>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- Responsive navbar-->
    @{
        await Html.RenderPartialAsync("_Navbar");
    }
    <!-- Page header with logo and tagline-->
    <header class="header-bg border-bottom mb-4">
        <div class="container px-4 px-lg-5">
            <div class="text-center">
                <h1 class="fw-bolder">Kitapların dünyasına açılan pencere</h1>
                <p class="lead mb-4">Kitaplar hakkında her şey...</p>
                <!-- Arama formu -->
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <form class="d-flex" action="/Home/Arama" method="get">
                            <div class="input-group">
                                <input class="form-control" type="search" name="q" 
                                       placeholder="Kitap adı veya yazar adı ara..." aria-label="Ara">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i> Ara
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Page content-->
    <div class="container">
        <div class="row">
            <!-- Ana içerik -->
            <div class="col-lg-8 mt-4">
                @RenderBody()
            </div>
            <div class="col-lg-4 mt-4">
                @await Component.InvokeAsync("Turler")
                @await Component.InvokeAsync("Yazarlar")
            </div>
        </div>
    </div>
    <!-- Footer-->
    <footer class="footer bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-4">Kitap Dünyası</h5>
                    <p class="mb-4">Kitapseverlerin buluşma noktası. Binlerce kitap, yazar ve kullanıcı ile büyüyen topluluğumuzun parçası olun.</p>
                    <div class="social-links">
                        <a href="#" class="me-3 text-light"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-3 text-light"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-3 text-light"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                    <h6 class="text-uppercase mb-4">Hızlı Erişim</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/" class="text-light text-decoration-none">Anasayfa</a></li>
                        <li class="mb-2"><a href="/Kitaplar" class="text-light text-decoration-none">Kitaplar</a></li>
                        <li class="mb-2"><a href="/Yazarlar" class="text-light text-decoration-none">Yazarlar</a></li>
                        <li class="mb-2"><a href="/Yayinevleri" class="text-light text-decoration-none">Yayınevleri</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                    <h6 class="text-uppercase mb-4">Kurumsal</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/Hakkimizda" class="text-light text-decoration-none">Hakkımızda</a></li>
                        <li class="mb-2"><a href="/Iletisim" class="text-light text-decoration-none">İletişim</a></li>
                        <li class="mb-2"><a href="/Gizlilik" class="text-light text-decoration-none">Gizlilik Politikası</a></li>
                        <li class="mb-2"><a href="/Kullanim-Kosullari" class="text-light text-decoration-none">Kullanım Koşulları</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h6 class="text-uppercase mb-4">Bültenimize Abone Olun</h6>
                    <p class="mb-3">Yeni kitaplar ve etkinliklerden haberdar olmak için bültenimize abone olun.</p>
                    <form class="mb-3">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="E-posta adresiniz" required>
                            <button class="btn btn-primary" type="submit">Abone Ol</button>
                        </div>
                    </form>
                </div>
            </div>
            <hr class="my-4 bg-light">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; @DateTime.Now.Year Kitap Dünyası. Tüm hakları saklıdır.</p>
                </div>
                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <img src="/images/payment-methods.png" alt="Ödeme Yöntemleri" height="30">
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
    <script src="~/js/theme.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        // Tema ikonunu güncelle
        function updateThemeIcon() {
            const theme = document.documentElement.getAttribute('data-theme');
            const icon = document.getElementById('theme-icon');
            icon.className = theme === 'light' ? 'fas fa-moon' : 'fas fa-sun';
        }

        // Sayfa yüklendiğinde ve tema değiştiğinde ikonu güncelle
        document.addEventListener('DOMContentLoaded', updateThemeIcon);
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                if (mutation.attributeName === 'data-theme') {
                    updateThemeIcon();
                }
            });
        });
        observer.observe(document.documentElement, { attributes: true });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
