@model books.Models.AdminViewModels.DillerVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dil Düzenle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Diller">Diller</a></li>
                    <li class="breadcrumb-item active">Dil Düzenle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-warning">
                    <form class="form-horizontal" method="post">
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="form-group">
                                <label>Dil Adı</label>
                                <input type="text" class="form-control" asp-for="Adi" required>
                                <span asp-validation-for="Adi" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/Admin/Diller" class="btn btn-default">Vazgeç</a>
                            <button type="submit" class="btn btn-warning float-right">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 