@model books.Models.AdminViewModels.YazarlarVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Yazar Ekle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Yazarlar">Yazarlar</a></li>
                    <li class="breadcrumb-item active">Yazar Ekle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-primary">
                    <form class="form-horizontal" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="card-body px-2 px-sm-3">
                            <div class="form-group">
                                <label asp-for="adi">Ad</label>
                                <input asp-for="adi" class="form-control" placeholder="Yazar adı">
                                <span asp-validation-for="adi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="soyadi">Soyad</label>
                                <input asp-for="soyadi" class="form-control" placeholder="Yazar soyadı">
                                <span asp-validation-for="soyadi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="dogumTarihi">Doğum Tarihi</label>
                                <input asp-for="dogumTarihi" type="date" class="form-control">
                                <span asp-validation-for="dogumTarihi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="dogumYeri">Doğum Yeri</label>
                                <input asp-for="dogumYeri" class="form-control" placeholder="Doğum yeri">
                                <span asp-validation-for="dogumYeri" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="cinsiyeti">Cinsiyet</label>
                                <div>
                                    <input type="radio" asp-for="cinsiyeti" value="E" checked> Erkek
                                    <input type="radio" asp-for="cinsiyeti" value="K"> Kadın
                                </div>
                                <span asp-validation-for="cinsiyeti" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OlumTarihi">Ölüm Tarihi</label>
                                <input asp-for="OlumTarihi" type="date" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="sira">Sıra</label>
                                <input asp-for="sira" class="form-control" type="number">
                            </div>
                            <div class="form-group">
                                <label asp-for="aktif">Durum</label>
                                <select asp-for="aktif" class="form-control">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="biyografi">Biyografi</label>
                                <textarea asp-for="biyografi" class="form-control" rows="5" placeholder="Yazar biyografisi"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="ResimFile">Resim</label>
                                <input asp-for="ResimFile" type="file" class="form-control">
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/Admin/Yazarlar" class="btn btn-default">Vazgeç</a>
                            <button type="submit" class="btn btn-primary float-right">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 