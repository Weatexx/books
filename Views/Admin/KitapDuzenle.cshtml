@model books.Models.AdminViewModels.KitaplarVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Kitap Düzenle</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Kitaplar">Kitaplar</a></li>
                    <li class="breadcrumb-item active">Kitap Düzenle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <!-- /.col-md-6 -->
            <div class="col-lg-6">

                <div class="card card-warning">
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Mevcut Resim</label>
                                <div class="col-sm-10">
                                    @if (!string.IsNullOrEmpty(Model.Resim))
                                    {
                                        <img src="~/images/book/@Model.Resim" alt="@Model.Adi" 
                                            style="width: 100px; height: 140px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <img src="~/images/book/default.jpg" alt="@Model.Adi" 
                                            style="width: 100px; height: 140px; object-fit: cover;" />
                                    }
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Yeni Resim</label>
                                <div class="col-sm-10">
                                    <input type="file" asp-for="ResimFile" class="form-control" accept="image/*">
                                    <span asp-validation-for="ResimFile" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Kitap Adı</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Adi" class="form-control"
                                        placeholder="Kitap Adı" value="@Model.Adi">
                                </div>
                                <span asp-validation-for="Adi" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Yazar Id</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="YazarId" class="form-control" placeholder="Yazar Id"
                                        value="@Model.YazarId">
                                </div>
                                <span asp-validation-for="YazarId" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">dil Id</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="DilId" class="form-control"
                                        placeholder="Dil Id" value="@Model.DilId">
                                </div>
                                <span asp-validation-for="DilId" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Sayfa Sayısı</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="SayfaSayisi" class="form-control" placeholder="Sayfa Sayısı"
                                        value="@Model.SayfaSayisi">
                                </div>
                                <span asp-validation-for="SayfaSayisi" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Yayınevi Id</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="YayineviId" class="form-control" placeholder="Yayınevi Id"
                                        value="@Model.YayineviId">
                                </div>
                                <span asp-validation-for="YayineviId" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Özet</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Ozet" class="form-control" placeholder="Özet"
                                        value="@Model.Ozet">
                                </div>
                                <span asp-validation-for="Ozet" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Yayın Tarihi</label>
                                <div class="col-sm-10">
                                    <input type="date" asp-for="YayinTarihi" class="form-control" 
                                        value="@Model.YayinTarihi.ToString("yyyy-MM-dd")"/>
                                </div>
                                <span asp-validation-for="YayinTarihi" class="text-danger"></span>
                            </div>
                            

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a href="/Admin/Kitaplar" class="btn btn-default">Vazgeç</a>
                            <button type="submit" class="btn btn-warning float-right">Güncelle</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>