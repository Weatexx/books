@model books.Models.AdminViewModels.YayinevleriVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Yayınevi Ekle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Yayinevleri">Yayınevleri</a></li>
                    <li class="breadcrumb-item active">Yayınevi Ekle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Yayınevi Bilgileri</h3>
                    </div>
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="form-group">
                                <label>Yayınevi Adı</label>
                                <input type="text" class="form-control" asp-for="YayineviAdi" required maxlength="200">
                                <span asp-validation-for="YayineviAdi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Adres</label>
                                <input type="text" class="form-control" asp-for="Adres" maxlength="150">
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>
                                <input type="tel" class="form-control" asp-for="Tel" maxlength="13">
                            </div>
                            <div class="form-group">
                                <label>Sıra</label>
                                <input type="number" class="form-control" asp-for="Sira" required>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/Admin/Yayinevleri" class="btn btn-default">Vazgeç</a>
                            <button type="submit" class="btn btn-primary float-right">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 