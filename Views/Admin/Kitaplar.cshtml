@model List<books.Models.AdminViewModels.KitaplarVM>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Kitaplar</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Kitaplar</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <!-- /.col-md-6 -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a href="/Admin/KitapEkle" class="btn btn-primary">Yeni Kitap Ekle</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Resim</th>
                                    <th>Kitap Adı</th>
                                    <th>Yazar</th>
                                    <th>Yayınevi</th>
                                    <th>Sayfa Sayısı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kitap in Model)
                                {
                                    <tr>
                                        <td>@kitap.Id</td>
                                        <td>
                                            <img src="/images/books/@kitap.Resim" alt="@kitap.Adi" style="max-width: 50px;" />
                                        </td>
                                        <td>@kitap.Adi</td>
                                        <td>@kitap.YazarId</td>
                                        <td>@kitap.YayineviId</td>
                                        <td>@kitap.SayfaSayisi</td>
                                        <td>
                                            <a href="/Admin/KitapDuzenle/@kitap.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                            <a href="/Admin/KitapSil/@kitap.Id" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</div>