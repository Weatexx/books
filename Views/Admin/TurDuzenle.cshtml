@model books.Models.AdminViewModels.TurlerVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Tür Düzenle</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Users">Türler</a></li>
                    <li class="breadcrumb-item active">Tür Düzenle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <!-- /.col-md-6 -->
            <div class="col-lg-6">

                <div class="card card-info">
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" action="/Admin/TurDuzenle/@ViewBag.UserInfo.Id">
                        <input asp-for="Id" type="hidden" value="@ViewBag.UserInfo.Id" />
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Tür Adı</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="TurAdi" class="form-control"
                                        placeholder="Tür Adı" value="@ViewBag.UserInfo.TurAdi">
                                </div>
                                <span asp-validation-for="TurAdi" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Sıra</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Sira" class="form-control" placeholder="Sıra"
                                        value="@ViewBag.UserInfo.Sira">
                                </div>
                                <span asp-validation-for="Sira" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a href="/Admin/Turler" type="submit" class="btn btn-default">Vazgeç</a>
                            <button type="submit" class="btn btn-primary float-right">Kaydet</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>