@model List<books.Models.AdminViewModels.KullanicilarVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Kullanıcılar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Kullanıcılar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Kullanıcı Listesi</h3>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Resim</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>İsim</th>
                                    <th>Soyisim</th>
                                    <th>Telefon</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kullanici in Model)
                                {
                                    <tr>
                                        <td>@kullanici.Id</td>
                                        <td>
                                            <img src="/images/users/@kullanici.Resim" alt="@kullanici.KullaniciAdi" 
                                                 class="img-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                        </td>
                                        <td>@kullanici.KullaniciAdi</td>
                                        <td>@kullanici.Isim</td>
                                        <td>@kullanici.Soyisim</td>
                                        <td>@kullanici.TelNo</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 