@model List<books.Models.AdminViewModels.YayinevleriVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Yayınevleri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Yayınevleri</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a href="/Admin/YayineviEkle" class="btn btn-primary">Yeni Yayınevi Ekle</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Logo</th>
                                    <th>Yayınevi Adı</th>
                                    <th>Telefon</th>
                                    <th>Website</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var yayinevi in Model)
                                {
                                    <tr>
                                        <td>@yayinevi.ID</td>                                       
                                        <td>@yayinevi.yayineviAdi</td>
                                        <td>@yayinevi.tel</td>
                                        <td>
                                            <a href="/Admin/YayineviDuzenle/@yayinevi.ID" class="btn btn-warning btn-sm">Düzenle</a>
                                            <a href="/Admin/YayineviSil/@yayinevi.ID" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 