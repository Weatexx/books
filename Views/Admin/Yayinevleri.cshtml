@model List<books.Models.AdminViewModels.YayinevleriVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Yayınevleri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Yayınevleri</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Yayınevi Listesi</h3>
                        <div class="card-tools">
                            <a href="/Admin/YayineviEkle" class="btn btn-primary btn-sm me-2">
                                <i class="fas fa-plus"></i> Yeni Yayınevi Ekle
                            </a>
                            <form action="/Admin/Yayinevleri" method="get" class="input-group input-group-sm" style="width: 250px; display: inline-flex;">
                                <input type="text" name="search" class="form-control float-right" 
                                       placeholder="Yayınevi ara..." value="@ViewBag.Search">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Yayınevi Adı</th>
                                    <th>Adres</th>
                                    <th>Telefon</th>
                                    <th>Sıra</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var yayinevi in Model)
                                {
                                    <tr>
                                        <td>@yayinevi.Id</td>
                                        <td>@yayinevi.YayineviAdi</td>
                                        <td>@yayinevi.Adres</td>
                                        <td>@yayinevi.Tel</td>
                                        <td>@yayinevi.Sira</td>
                                        <td>
                                            <a href="/Admin/YayineviDuzenle/@yayinevi.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Düzenle
                                            </a>
                                            <a href="/Admin/YayineviSil/@yayinevi.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Sil
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 