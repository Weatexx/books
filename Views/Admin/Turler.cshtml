@model List<books.Models.AdminViewModels.TurlerVM>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Türler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Türler</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tür Listesi</h3>
                        <div class="card-tools">
                            <a href="/Admin/TurEkle" class="btn btn-primary btn-sm me-2">
                                <i class="fas fa-plus"></i> Yeni Tür Ekle
                            </a>
                            <form action="/Admin/Turler" method="get" class="input-group input-group-sm" style="width: 250px; display: inline-flex;">
                                <input type="text" name="search" class="form-control float-right" 
                                       placeholder="Tür ara..." value="@ViewBag.Search">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tür Adı</th>
                                    <th>Sıra</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tur in Model)
                                {
                                    <tr>
                                        <td>@tur.Id</td>
                                        <td>@tur.TurAdi</td>
                                        <td>@tur.Sira</td>
                                        <td>
                                            <a href="/Admin/TurDuzenle/@tur.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                            <a href="/Admin/TurSil/@tur.Id" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>