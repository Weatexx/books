@model List<Kullanicilar>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kullanıcı Listesi</h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Profil</th>
                    <th>Kullanıcı Adı</th>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Telefon</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kullanici in Model)
                {
                    <tr>
                        <td>@kullanici.id</td>
                        <td>
                            <img src="~/images/users/@kullanici.resim" class="img-circle elevation-2" 
                                 alt="Profil" style="width: 40px; height: 40px; object-fit: cover;">
                        </td>
                        <td>@kullanici.usernames</td>
                        <td>@kullanici.isim</td>
                        <td>@kullanici.soyisim</td>
                        <td>@kullanici.telno</td>
                        <td>
                            <button class="btn btn-warning btn-sm" onclick="kullaniciDuzenle(@kullanici.id)">
                                <i class="fas fa-edit"></i> Düzenle
                            </button>
                            <button class="btn btn-danger btn-sm" onclick="kullaniciSil(@kullanici.id)">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 