@model books.Models.AdminViewModels.YayinevleriVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Yayınevi Sil</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Yayinevleri">Yayınevleri</a></li>
                    <li class="breadcrumb-item active">Yayınevi Sil</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Yayınevi Silme Onayı</h3>
                    </div>
                    <form method="post" action="/Admin/YayineviSilOnay/@Model.Id">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="alert alert-warning">
                                <h5><i class="icon fas fa-exclamation-triangle"></i> Uyarı!</h5>
                                <strong>@Model.YayineviAdi</strong> isimli yayınevini silmek istediğinize emin misiniz?
                                Bu işlem geri alınamaz ve yayınevine bağlı tüm kitaplar etkilenecektir.
                            </div>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tr>
                                        <th style="width: 150px">Yayınevi Adı</th>
                                        <td>@Model.YayineviAdi</td>
                                    </tr>
                                    <tr>
                                        <th>Adres</th>
                                        <td>@Model.Adres</td>
                                    </tr>
                                    <tr>
                                        <th>Telefon</th>
                                        <td>@Model.Tel</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/Admin/Yayinevleri" class="btn btn-default">Vazgeç</a>
                            <button type="submit" class="btn btn-danger float-right">Sil</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 